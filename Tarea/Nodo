public class nodo {
    //1 . visitar raiz
    //2 . recorrer subarbol izquierdo
    //3 . recorrer subarbol derecho
    private nodo H_izquierdo;
    private nodo H_derecho;
    private int valor;
 
    public nodo(int valor) {
        this.valor = valor;
        this.H_izquierdo = null;
        this.H_derecho = null;
   
    }
    //getters
 
    public int getValor() {
        return valor;
    }
    public nodo getHijoIzquierdo() {
        return H_izquierdo;
    }
    public nodo getHijoDerecho() {
        return H_derecho;
    }
 
    //setters
    public void setValor(int valor) {
        this.valor = valor;
    }
    public void setHIzquierdo(nodo H_izquierdo) {//asigna un nodo al hijo izquierdo
        this.H_izquierdo = H_izquierdo;
    }
    public void setHDerecho(nodo H_derecho) {//asigna un nodo al hijo derecho
        this.H_derecho =H_derecho;
    }
 
}
 
 class ArbolBinario {
    private nodo raiz;
 
    public ArbolBinario() {
        this.raiz = null;
    }
 
    public nodo getRaiz() {
        return raiz;
    }
 
    public void setRaiz(nodo raiz) {
        this.raiz = raiz;
    }
 
   
   
    public void recorridoPreorden () {
        System.out.println("Recorrido en Preorden: ");
        recorrido(raiz);// llama al metodo recursivo recorrido pasandole la raiz como punto de inicio
    }
     private void recorrido(nodoA nodo) {
        if (nodo == null) {
            return;
        }
        System.out.println(nodo.getValor());// visita el nodo actual
        recorrido(nodo.getHijoIzquierdo());// recorre el subarbol izquierdo
        recorrido(nodo.getHijoDerecho());// recorre el subarbol derecho
        //se detiene cuando encuentra un nodo nulo
    }
   
    public void insertar(int valor) {// recibe el nuevo valor y llama al  metodo recursivo insertarValor
        raiz = insertarValor(raiz, valor);// raiz es el punto de partida
    }
    public nodo insertarValor(nodoA nodo, int valor) {
        if (nodo == null) {// cuando encuetra un espacio vacio crea un nuevo nodo y lo enlaza al padre
            return new nodoArbol(valor);
        }
    //decide si insertar a la izquierda o derecha
        if (valor < nodo.getValor()) {
            nodo.setHIzquierdo(insertarValor(nodo.getHIzquierdo(), valor));
        } else if (valor > nodo.getValor()) {
            nodo.setHDerecho(insertarValor(nodo.getHDerecho(), valor));
        }
        return nodo;
    }
 
    public static void main(String[] args) {
        ArbolBinario arbol = new ArbolBinario();
        arbol.insertar(22);
        arbol.insertar(5);
        arbol.insertar(12);
        arbol.insertar(11);
        arbol.insertar(54);
        arbol.insertar(89);
        arbol.insertar(34);
        arbol.insertar(67);
 
      arbol.recorridoPreorden();
    }